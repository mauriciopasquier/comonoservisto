#secciones
  %h1 Secciones
  - raiz = @items.find { |i| i.reps[0].path == '/' }
  - clase = (@item == raiz) ? 'actual' : 'noactual'
  - link = link_to(raiz[:titulo], raiz.reps[0])
  %ul.menu
    %li{:class => clase}= link
    - raiz.children.each do |pagina|
    - unless pagina.reps[0].path == '/conclusiones/' 
      - clase = (@item == pagina) ? 'actual' : 'noactual'
      - link = link_to(pagina[:titulo], pagina.reps[0])
        %li{:class => clase}
          = link if pagina.reps[0].name == :menu
          - unless pagina.children.empty?
            %ul.submenu
              - pagina.children.each do |subpagina|
              - clase = (@item == subpagina) ? 'actual' : 'noactual'
              - link = link_to(subpagina[:titulo], subpagina.reps[0])
                %li{:class => clase}= link if subpagina.reps[0].name == :menu
    - conclusiones = @items.find { |i| i.reps[0].path == '/conclusiones/' }
    - clase = (@item == conclusiones) ? 'actual' : 'noactual'
    - link = link_to(conclusiones[:titulo], conclusiones.reps[0])
    %li{:class => clase}= link
